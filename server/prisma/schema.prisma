generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  PENDING
  DONE
  CANCELED
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String?
  passwordHash    String
createdAt         DateTime @default(now())
updatedAt         DateTime @updatedAt

  tasks           Task[]
  events          TaskEvent[]
  dailyStats      DailyUserStats[]
  recommendations UserRecommendation[]
  dailyFeatures   DailyUserFeatures[]

}

model Task {
  id          String     @id @default(cuid())
  userId      String
  title       String
  description String?
  status      TaskStatus @default(PENDING)
  dueAt       DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  events      TaskEvent[]

  @@index([userId, createdAt])
  @@index([userId, status])
  @@index([userId, dueAt])
}

model TaskEvent {
  id        String   @id @default(cuid())
  userId    String
  taskId    String?
  type      String
  payload   Json?
  createdAt DateTime @default(now())

  dedupeKey   String?  @unique
  processedAt DateTime?
  attempts    Int      @default(0)
  lastError   String?

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([taskId, createdAt])
}

model DailyUserStats {
  id             String   @id @default(cuid())
  userId         String
  day            DateTime
  createdCount   Int      @default(0)
  completedCount Int      @default(0)
  completionRate Float    @default(0)

  updatedAt      DateTime @updatedAt

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, day])
  @@index([day])
  @@index([userId, day])  
}

model UserRecommendation {
  id        String   @id @default(cuid())
  userId    String
  type      String
  score     Float    @default(0)
  message   String
  evidence  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime?

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
  @@index([userId, score])
  @@index([expiresAt])
}

model DailyUserFeatures {
  id                 String   @id @default(cuid())
  userId             String
  day                DateTime

  createdCount       Int      @default(0)
  completedCount     Int      @default(0)
  completionRate     Float    @default(0)

  tasksWithDueAt     Int      @default(0)
  overdueCount       Int      @default(0)

  avgCompletionLagH  Float    @default(0) // זמן ממוצע משעת יצירה עד השלמה, שעות
  createdMorning     Int      @default(0) // 05-11 UTC
  createdAfternoon   Int      @default(0) // 12-17 UTC
  createdEvening     Int      @default(0) // 18-23 UTC
  createdNight       Int      @default(0) // 00-04 UTC

  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, day])
  @@index([day])
  @@index([userId, day])
}